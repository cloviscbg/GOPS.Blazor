<CustomTooltip Text="@(Dark ? "Light mode" : "Dark mode")"
			Placement="Placement.Left">
	<MudIconButton OnClick="Toggle"
				   class="@Class">
		@if (Dark)
		{
			<svg width="24px"
				 height="24px"
				 viewBox="0 0 24 24"
				 fill="none"
				 stroke="currentColor"
				 stroke-width="1.5"
				 class="@IconClass"
				 fill-rule="evenodd"
				 clip-rule="evenodd"
				 stroke-linecap="round"
				 stroke-linejoin="round">
				<path d="M12.0548 3V4.3719M12.0548 19.6281V21M21.0547 12.0001H19.6828M4.42659 12.0001H3.05469M18.4185 5.63582L17.4485 6.60589M6.66105 17.3938L5.69099 18.3639M18.4185 18.3639L17.4485 17.3938M6.66105 6.60636L5.69099 5.6363" />
				<path d="M12.0549 7.80469C14.3725 7.80469 16.2504 9.68351 16.2504 12.0002C16.2504 14.3178 14.3725 16.1966 12.0549 16.1966C9.73723 16.1966 7.85938 14.3178 7.85938 12.0002C7.85938 9.68351 9.73723 7.80469 12.0549 7.80469Z" />
			</svg>
		}
		else
		{
			<svg width="24px"
				 height="24px"
				 viewBox="0 0 24 24"
				 fill="none"
				 stroke="currentColor"
				 stroke-width="1.5"
				 class="@IconClass"
				 fill-rule="evenodd"
				 clip-rule="evenodd">
				<path d="M21.1136 12.7168C20.6427 18.6138 14.4762 22.9259 8.10535 20.1248C6.25286 19.3104 4.75648 17.8043 3.95769 15.945C1.22469 9.5878 5.51148 3.48161 11.3881 3C10.8286 5.52381 11.5252 8.46988 13.3612 10.3058C15.1981 12.1437 18.3806 13.3327 21.1136 12.7168Z" />
			</svg>
		}
	</MudIconButton>
</CustomTooltip>

@namespace GOPS.Blazor.Server.Components

@code {
	[Parameter]
	public bool Dark { get; set; }

	[Parameter]
	public string IconSize { get; set; } = "1.5rem";

	[Parameter]
	public string? Class { get; set; }

	[Parameter]
	public string? IconClass { get; set; }

	[Parameter]
	public EventCallback<bool> DarkChanged { get; set; }

	private void Toggle()
	{
		Dark = !Dark;
		DarkChanged.InvokeAsync(Dark);
	}
}