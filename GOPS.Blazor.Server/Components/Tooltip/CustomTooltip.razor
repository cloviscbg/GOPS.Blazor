<MudTooltip Text="@Text"
			Placement="@Placement"
			Class="@className">
	@ChildContent
</MudTooltip>

@namespace GOPS.Blazor.Server.Components

@code {

	protected string className => new CssBuilder("rounded-2xl border border-border dark:border-border-dark !text-foreground-accentdark dark:!text-foreground !bg-foreground dark:!bg-foreground-dark")
		.AddClass(Class)
		.Build();

	[Parameter]
	public RenderFragment? ChildContent { get; set; }

	[Parameter]
	public string? Text { get; set; }

	[Parameter]
	public Placement Placement { get; set; } = Placement.Bottom;

	[Parameter]
	public string Class { get; set; } = "";
}
