<div class="flex items-center justify-between">
	<div class="flex sticky left-0 items-center gap-2 sm:gap-3">
		<span class="pl-6 font-black text-base text-foreground-accent dark:text-foreground-accentdark">
			@GroupName
		</span>
		<span class="text-xs font-light text-foreground dark:text-foreground-dark">
			@TotalGroupHours Hrs
		</span>

		<div class="flex">
			<svg class="h-4 w-4"
				 viewBox="0 0 25 24"
				 fill="none"
				 stroke="currentColor"
				 stroke-width="1.5"
				 stroke-miterlimit="10">
				<path d="M5.87184 19.5447C4.64406 19.5447 3.90213 18.6623 3.84961 17.4331C3.84961 14.9312 6.29424 14.0682 9.97759 14.0391C13.6675 14.0779 16.1187 14.9409 16.1056 17.4331C16.0465 18.6623 15.3089 19.5447 14.0833 19.5447H5.87184Z" />
