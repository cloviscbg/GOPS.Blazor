			<span class="ml-1 text-xs font-light text-foreground dark:text-foreground-dark">
				@PeopleCount
			</span>
		</div>

		<Divider Vertical="true"
				 Class="hidden md:flex h-[1.5rem]" />

		<MudMenu @onclick:stopPropagation="true"
				 DisableElevation="true"
				 AnchorOrigin="Origin.BottomRight"
				 TransformOrigin="Origin.TopRight"
				 PopoverClass="w-56 !mt-3 !shadow-lg rounded-2xl ring-1 ring-black dark:ring-border-dark ring-opacity-5 dark:bg-background-dark"
				 ListClass="!p-2">
			<ActivatorContent>
				<MudElement class="mud-ripple group p-2 rounded-full shadow-lg text-sm font-semibold bg-surface dark:bg-surface-dark">
					<svg class="h-6 w-6 group-hover:text-primary group-hover:dark:text-primary-400 text-foreground text-foreground-dark"
						 viewBox="0 0 25 25"
						 fill="none"
						 fill-rule="evenodd"
						 clip-rule="evenodd"
						 stroke="currentColor"
						 stroke-width="1.5"
						 stroke-linecap="round"
						 stroke-linejoin="round">
						<path d="M6.5 12.7656C6.5 13.3176 6.052 13.7656 5.5 13.7656C4.948 13.7656 4.5 13.3176 4.5 12.7656C4.5 12.2136 4.948 11.7656 5.5 11.7656C6.052 11.7656 6.5 12.2136 6.5 12.7656Z" />
						<path d="M13.5 12.7656C13.5 13.3176 13.052 13.7656 12.5 13.7656C11.948 13.7656 11.5 13.3176 11.5 12.7656C11.5 12.2136 11.948 11.7656 12.5 11.7656C13.052 11.7656 13.5 12.2136 13.5 12.7656Z" />
						<path d="M20.5 12.7656C20.5 13.3176 20.052 13.7656 19.5 13.7656C18.948 13.7656 18.5 13.3176 18.5 12.7656C18.5 12.2136 18.948 11.7656 19.5 11.7656C20.052 11.7656 20.5 12.2136 20.5 12.7656Z" />
					</svg>
				</MudElement>
			</ActivatorContent>
			<ChildContent>
				<MudMenuItem Class="md:hidden px-4 py-3 rounded-2xl hover:bg-hover hover:dark:bg-container-dark">
					<span class="text-sm text-foreground dark:text-foreground-dark">
						Add people
					</span>
				</MudMenuItem>
				<MudMenuItem Class="px-4 py-3 rounded-2xl hover:bg-hover hover:dark:bg-container-dark">
					<span class="text-sm text-foreground dark:text-foreground-dark">
						Rename group
					</span>
				</MudMenuItem>
				<MudMenuItem Class="px-4 py-3 rounded-2xl hover:bg-hover hover:dark:bg-container-dark">
					<span class="text-sm text-foreground dark:text-foreground-dark">
						Delete group
					</span>
				</MudMenuItem>
			</ChildContent>
		</MudMenu>
	</div>

	<div class="flex sticky right-0 items-center">
		<CustomButton Elevation="true"
					  Rounded="true"
					  Class="max-sm:hidden mr-6 px-6 py-3 text-xs font-semibold text-foreground-accent dark:text-foreground-dark hover:text-primary hover:dark:text-primary-400 bg-white dark:bg-surface-dark">
			<svg class="w-6 h-6 mr-1"
				 viewBox="0 0 25 24"
				 fill="none"
				 stroke="currentColor"
				 stroke-width="1.5"
				 stroke-linecap="round"
				 stroke-linejoin="round"
				 stroke-miterlimit="10">
				<path d="M18.7829 7.90234V12.5444M21.1508 10.2231H16.416" />
				<path d="M5.46835 19.8768C4.06102 19.8768 3.2106 18.9636 3.15039 17.6917C3.15039 15.1029 5.95251 14.2098 10.1745 14.1797C14.404 14.2198 17.2137 15.1129 17.1986 17.6917C17.1309 18.9636 16.2855 19.8768 14.8807 19.8768H5.46835Z" />
				<path d="M10.1805 11.2244C12.141 11.2244 13.7302 9.63513 13.7302 7.67469C13.7302 5.71425 12.141 4.125 10.1805 4.125C8.22011 4.125 6.63086 5.71425 6.63086 7.67469C6.63086 9.63513 8.22011 11.2244 10.1805 11.2244Z" />
			</svg>
			Add People
		</CustomButton>
	</div>
</div>

@namespace GOPS.Blazor.Server.Components.Internal

@code {
	[CascadingParameter]
	private Scheduler? Scheduler { get; set; }

	[Parameter]
	public string GroupName { get; set; } = "Unnamed Group";

	[Parameter]
	public int PeopleCount { get; set; }

	[Parameter]
	public int TotalGroupHours { get; set; }
}
